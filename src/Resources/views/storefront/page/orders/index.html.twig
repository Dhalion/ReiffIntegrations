{#                                                                    {% sw_icon 'box-solid' style {#}
{#                                                                        'namespace': 'ReiffIntegrations'#}
{#                                                                    } %}#}
                                                                </div>
                                                                <div class="col-1">
                                                                    {% sw_icon 'arrow-head-down' style {
                                                                        size: 'xs'
                                                                    } %}
                                                                </div>
                                                            </div>
                                                        </div>
                                                    {% endblock %}
                                                </div>
                                                <div class="b2b-accordion__body">
                                                    <div
                                                        class="b2b--ajax-panel"
                                                        data-id="reiff-order-detail-{{ order.number }}"
                                                        data-url=""
                                                    ></div>
