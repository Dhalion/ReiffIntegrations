{% block sw_customer_list_grid_columns %}
    {% parent() %}

    <template #column-salesOrganization="{ item, compact, isInlineEdit }">
        <template v-if="isInlineEdit">
            <sw-text-field
                v-model="item.extensions.reiffCustomer.salesOrganization"
                :size="compact ? 'small' : 'default'"
            />
        </template>
        <template v-else-if="item?.extensions?.reiffCustomer?.salesOrganization">
            {{ item.extensions.reiffCustomer.salesOrganization }}
        </template>
        <template v-else>
            {{ $tc('ReiffIntegrations.customer.detail.salesOrganizationPlaceholder') }}
        </template>
    </template>

    <template #column-debtorNumber="{ item, compact, isInlineEdit }">
        <template v-if="isInlineEdit">
            <sw-text-field
                v-model="item.extensions.reiffCustomer.debtorNumber"
                :size="compact ? 'small' : 'default'"
            />
        </template>
        <template v-else-if="item?.extensions?.reiffCustomer?.debtorNumber">
            {{ item.extensions.reiffCustomer.debtorNumber }}
        </template>
        <template v-else>
            {{ $tc('ReiffIntegrations.customer.detail.debtorNumberPlaceholder') }}
        </template>
    </template>

    <template #column-doubleOptInRegistration="{ item, compact, isInlineEdit }">
        <sw-checkbox-field v-model="item.doubleOptInRegistration" :disabled="true"></sw-checkbox-field>
    </template>

    <template #column-isOciCustomer="{ item, compact, isInlineEdit }">
        <sw-checkbox-field v-if="item && item.customFields" :value="item.customFields.reiff_customer_is_oci" :disabled="true"></sw-checkbox-field>
        <sw-checkbox-field v-else :value="false" :disabled="true"></sw-checkbox-field>
    </template>
{% endblock %}
