{% block sw_customer_base_metadata_customer_number %}
    {% parent() %}

    <sw-description-list>
        <dt class="sw-customer-base-info__label">
            {{ $tc('ReiffIntegrations.customer.detail.salesOrganisationLabel') }}
        </dt>
        <dd class="sw-customer-base__label-customer-salesOrganisation">
            <sw-text-field v-if="customerEditMode"
                           v-model="customer.extensions.reiffCustomer.salesOrganisation"
                           :placeholder="$tc('ReiffIntegrations.customer.detail.salesOrganisationPlaceholder')"
            />
            <template v-else-if="customer?.extensions?.reiffCustomer?.salesOrganisation">
                {{ customer.extensions.reiffCustomer.salesOrganisation }}
            </template>
            <template v-else>
                {{ $tc('ReiffIntegrations.customer.detail.salesOrganisationPlaceholder') }}
            </template>
        </dd>
    </sw-description-list>

    <sw-description-list>
        <dt class="sw-customer-base-info__label">
            {{ $tc('ReiffIntegrations.customer.detail.debtorNumberLabel') }}
        </dt>
        <dd class="sw-customer-base__label-customer-debtorNumber">
            <sw-text-field v-if="customerEditMode"
                           v-model="customer.extensions.reiffCustomer.debtorNumber"
                           :placeholder="$tc('ReiffIntegrations.customer.detail.debtorNumberPlaceholder')"
            />
            <template v-else-if="customer && customer.extensions && customer.extensions.reiffCustomer && customer.extensions.reiffCustomer.debtorNumber">
                {{ customer.extensions.reiffCustomer.debtorNumber }}
            </template>
            <template v-else>
                {{ $tc('ReiffIntegrations.customer.detail.debtorNumberPlaceholder') }}
            </template>
        </dd>
    </sw-description-list>
{% endblock %}
